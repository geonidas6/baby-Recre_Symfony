{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
                {% for error in errors %}
                    <h5>{{ error.message }}</h5>
                {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock %}

{% block form_row %}
        {{  form_widget(form) }}
        {{  form_errors(form) }}
{% endblock form_row %}

{% block repeated_row %}
    {% for child in form %}
        {{  form_row(child) }}
        <br/>
    {% endfor %}
{% endblock repeated_row %}