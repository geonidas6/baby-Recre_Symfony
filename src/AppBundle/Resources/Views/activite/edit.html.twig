                              </div>
                          </div>


                          <div class="hide">
                              {{ form_widget(edit_form.datedebute,{'class':'form-control hide col-md-7 col-xs-12'}) }}
                              {{ form_widget(edit_form.datefin,{'class':'form-control hide col-md-7 col-xs-12'}) }}
                          </div>
                          <input type="submit" id="btnsubmitactiviter" class="btn btn-success" value="Edit" />
