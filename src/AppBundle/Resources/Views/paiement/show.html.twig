{% extends '@App/user_base.html.twig' %}

{% block title %} {{ parent() }} Paiement  {% endblock %}
{% block main %}
    <div class="" role="main">
        <div class="">
            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>{{ paiement.type }}</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="#">Settings 1</a>
                                        </li>
                                        <li><a href="#">Settings 2</a>
                                        </li>
                                    </ul>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <section class="content invoice">
                                <!-- title row -->
                                <div class="row">
                                    <div class="col-xs-12 invoice-header">
                                        <h1>
                                            <i class="fa fa-globe"></i> Facture.
                                            <small class="pull-right">Date: {{ paiement.datepaiement | date('Y-m-d') }}</small>
                                        </h1>
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- info row -->
                                <div class="row invoice-info">
                                    <div class="col-sm-4 invoice-col">
                                        A
                                        <address>
                                            <strong>Crèche {{ creche.nome }}</strong>
                                            <br>{{ creche.situation }}
                                            <br>Phone: {{ creche.tel }}
                                            <br>Email: {{ creche.email }}
                                        </address>
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-sm-4 invoice-col">
                                        Pour
                                        <address>
                                            <strong>{{ paiement.enfant.nom ~" "~  paiement.enfant.prenom }}</strong>
                                        </address>
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-sm-4 invoice-col">
                                        <b>Paiement numéro #{{ paiement.numeropaiement }}</b>
                                        <br>
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->

                                <!-- Table row -->
                                <div class="row">
                                    <div class="col-xs-12 table">
                                        <table class="table table-striped">
                                            <thead>
                                            <tr>
                                                <th>Type</th>
                                                <th>Datepaiement</th>
                                                <th>Sommeapayer</th>
                                                <th>Montantregler</th>
                                                <th>Restapayer</th>
                                                <th>Enfant</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <tr>
                                                <td>{{ paiement.type }}</td>
                                                <td>{% if paiement.datepaiement %}{{ paiement.datepaiement|date('Y-m-d H:i:s') }}{% endif %}</td>
                                                <td>{{ paiement.sommeapayer }}</td>
                                                <td>{{ paiement.montantregler }}</td>
                                                <td>{{ paiement.restapayer }}</td>
                                                <td>{{ paiement.enfant }}</td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->

                                <!-- /.row -->

                                <!-- this row will not appear when printing -->
                                <div class="row no-print">
                                    <div class="col-xs-12">
                                        <button class="btn btn-default" onclick="window.print();"><i class="fa fa-print"></i> Print</button>
                                       </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}



    <script>
$(document).ready(function () {
    $('#sidebar-menu').hide();
    $('.top_nav').hide();
    $('.left_col').hide();
})

    </script>
{% endblock %}
