                                    <li><a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="">
                                    <div class="x_content">
                                        <div class="row" >
                                            <table class="table table-bordered table-responsive table-striped" border="0">
                                                <tbody>
                                                <tr>
                                                    <td align="right" class="text-uppercase blue" nowrap=""><strong><u>Nom:</u></strong> </td>
                                                    <td>{{ enfant.nom }}</td>
                                                </tr>
                                                <tr>
                                                    <td align="right" class="text-uppercase blue" nowrap=""><strong><u>Prenom:</u></strong> </td>
                                                    <td>{{ enfant.prenom }}</td>
                                                </tr>
