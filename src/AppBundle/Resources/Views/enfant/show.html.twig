                                                </tr>

                                                </tbody>
                                            </table>
                                                        <a class="fa fa-edit btn btn-primary" href="{{ path('enfant_edit', { 'id': enfant.id }) }}"></a> |
                                                    <div class="btn">
                                                        {{ form_start(delete_form,{'attr':{'id': 'enfant_delete'}}) }}
