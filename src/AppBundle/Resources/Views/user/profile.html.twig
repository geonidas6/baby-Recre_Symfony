{% extends '@App/user_base.html.twig' %}
{% form_theme form 'app/form/profile_theme.html.twig' %}

{% block title %} {{ parent() }} {% trans  from 'user' into  app.session.get('Langue') %} Profil  {% endtrans %}  {% endblock %}
{% block main %}
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>{% trans  from 'user' into  app.session.get('Langue') %} Informations du profil  {% endtrans %} </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
                    <div class="profile_img">
                        <div id="crop-avatar">
                            <!-- Current avatar -->
                            <img id="profile-pic" class="img-responsive avatar-view" src="{% if userinfo.image is null %} {{ asset('images/user.png') }} {% else %} {{ asset('uploads/profile/'~userinfo.image.name) }} {% endif %}" alt="Avatar" title="Photo de profil">
                        </div>
                    </div>
                    <h3>{{ userinfo.firstName ~" "~ userinfo.lastName }}</h3>

                    <ul class="list-unstyled user_data">
                        <li>
                            <i class="fa fa-briefcase user-profile-icon"></i>  {% trans  from 'user' into  app.session.get('Langue') %} Identifiant  {% endtrans %} : {{ userinfo.username }}
                        </li>

                        <li class="m-top-xs">
                            <i class="fa fa-external-link user-profile-icon"></i>
                            {{ userinfo.email }}
                        </li>
                    </ul>

                    <a id="change_photo" class="btn btn-info"><i class="fa fa-edit m-right-xs"></i> {% trans  from 'user' into  app.session.get('Langue') %} Changer la photo de profil  {% endtrans %}</a>
                    <a id="submit_photo" style="display: none" class="btn btn-success"><i class="fa fa-edit m-right-xs"></i> {% trans  from 'user' into  app.session.get('Langue') %} Soumettre  {% endtrans %}</a>
                    <a id="cancel_photo" style="display: none"  class="btn btn-warning"><i class="fa fa-edit m-right-xs"></i> {% trans  from 'user' into  app.session.get('Langue') %} Annuler  {% endtrans %}</a>
                    <form id="input_form" style="display: none" >
                        <input type="file"   id="image_input" name="image" />
                    </form>

