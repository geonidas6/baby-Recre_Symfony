                                        {{ form_widget(form.email,{'class':'form-control col-md-7 col-xs-12'}) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">{% trans  from 'user' into  app.session.get('Langue') %} Identifiant  {% endtrans %} <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{ form_widget(form.username,{'class':'form-control col-md-7 col-xs-12'}) }}
                                        {{ form_errors(form.username) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">{% trans  from 'user' into  app.session.get('Langue') %} Mot de passe  {% endtrans %} </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{ form_row(form.plainPassword,{'class':'form-control col-md-7 col-xs-12'}) }}
                                        {# {{ form_errors(form.plainPassword) }} #}
                                    </div>
                                </div>
                                {{ form_rest(form) }}
